<h1>Twimble your list !</h1>


<% if @todos.size == 0 %>
  <p>You have no Todo's. Please add a <%= link_to 'Todo', new_todo_path %> </p>
<% else %>
  <% @todos.each do |element| %>
    <h2><%= element.id %> - <%= element.title %></h2>

    <%= link_to "<i class='fa fa-pencil-square-o'></i>".html_safe, edit_todo_path(element), class: "check" %>
    <%= link_to "<i class='fa fa-eye'></i>".html_safe, todo_path(element), class: "check" %>
    <%= link_to "<i class='fa fa-check'></i>".html_safe, todo_path(element), method: :delete, data: { confirm: 'Are you sure ?' }, class: "check" %>
  <% end %>
<% end %>

<p><%= link_to 'Add a Todo', new_todo_path, class: "link add" %></p>
