<h1>Twimble your list !</h1>


<% if @todos.size == 0 %>
  <p>You have no Todo's. Please add a <%= link_to 'todo', new_todo_path %> </p>
<% else %>
  <% @todos.each do |element| %>
    <h2><%= element.id %> - <%= element.title %></h2>

    <%= link_to 'Check it out', todo_path(element) %>
    <%= link_to 'Edit', edit_todo_path(element) %>
    <%= link_to 'Delete', todo_path(element), method: :delete, data: { confirm: 'Are you sure ?' } %>
    <br>
    <br>
  <% end %>
<% end %>


<p class="add"><%= link_to 'Add a Todo', new_todo_path %></p>
